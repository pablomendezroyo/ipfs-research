{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "types": ["node"],
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
